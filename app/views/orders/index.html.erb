<p id="notice"><%= notice %></p>

<div class="mainCont orders">

<h1>Orders</h1>

<table class="orders-table">
  <thead>
    <tr>
      <th>Order date</th>
      <th>Username</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_date %></td>
        <td><%= order.user.username %></td>
        <td><%= order.status %></td>
        
        <% if user_signed_in? %>

        <%  if current_user.admin? %>
        
          <td><%= link_to 'Details', order, :class => 'button', :role => 'button' %></td>
          <td><%= link_to 'Edit', edit_order_path(order), :class => 'button', :role => 'button' %></td>
          <td><%= link_to 'Destroy', order, :class => 'button', :role => 'button', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% else %>
          <td><%= link_to 'Details', order, :class => 'button', :role => 'button' %></td>
        
        <% end %>
        
        <% end %>
      </tr>
    <% end %>
    <tr>
      <% if user_signed_in? %>
      <%  if current_user.admin? %>
      <td><%= link_to 'New Order', new_order_path, :class => "button new-order", :role => "button" %></td>
      <% end %>
      <% end %>
    </tr>
  </tbody>
</table>

<br>
<br>

</div>